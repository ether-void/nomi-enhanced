{
  "manifest_version": 3,
  "name": "Nomi Enhanced",
  "version": "1.4.0",
  "description": "Enhanced features for Nomi.ai including auto-play, text highlighting, and other",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.nomi.ai/*",
    "*://*.civitai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.nomi.ai/*"],
      "js": [
        "cssConstants.js",
        "themes/default.js",
        "themes/minimalistic.js",
        "themeStorage.js",
        "themeManager.js",
        "groupChatProfileManager.js",
        "backgroundSystem.js",
        "commandSystem.js",
        "autoNomi.js",
        "artPageHandler.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nomi Enhanced Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["themes/image/*", "backgrounds/*/*"],
      "matches": ["*://*.nomi.ai/*"]
    }
  ]
}
